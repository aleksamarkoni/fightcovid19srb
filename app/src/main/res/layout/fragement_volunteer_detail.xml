<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/description"
        style="@style/NormalText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/here_you_can_find_detailed_information_about_volunteer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Here you can find detailed information about volunteer." />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/volunteer_profile_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        tools:background="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:id="@+id/name_title"
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        app:layout_constraintBottom_toBottomOf="@id/volunteer_profile_image"
        app:layout_constraintStart_toEndOf="@id/volunteer_profile_image"
        app:layout_constraintTop_toTopOf="@id/volunteer_profile_image" />

    <TextView
        android:id="@+id/name_value"
        style="@style/DescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@id/name_title"
        app:layout_constraintStart_toEndOf="@id/name_title"
        tools:text="Perica" />

    <TextView
        android:id="@+id/description_detail"
        style="@style/DescriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="@string/please_contact_volunteer_only_if_s_absolutely_necessary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/volunteer_profile_image" />

    <TextView
        android:id="@+id/phone_label"
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/phone_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_detail" />

    <TextView
        android:id="@+id/phone_value"
        style="@style/DescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="@id/phone_label"
        app:layout_constraintStart_toEndOf="@id/phone_label"
        tools:text="+381 64 27 15 393" />

    <ImageView
        android:id="@+id/call_volunteer_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="64dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/phone_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/phone_label"
        app:srcCompat="@drawable/ic_phone_purple_24dp" />

    <include
        android:id="@+id/loading_fragment_volunteer_detail"
        layout="@layout/loading_screen_item"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>